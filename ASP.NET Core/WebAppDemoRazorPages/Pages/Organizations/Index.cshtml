@page
@model WebAppDemoRazorPages.Pages.Organizations.IndexModel
@using DemoClients

@{
    ViewData["Title"] = "Index";
    var sl = Html.GetEnumSelectList<DirectionSearch>();
    
}

<h1>Організації</h1>

<div class="row">
    <div class="col-12 col-md-4">
        <a asp-page="Create" class="btn btn-outline-primary d-md-inline-block d-flex justify-content-center" >Додати</a>
    </div>
    <div class="col-12 col-md-8">

        <form asp-page-handler="filter">
            <div class="row text-center">
                <div class="col-12 col-md-4 d-flex align-items-center">
                    Повнотекстовий пошук:
                </div>
                <div class="col-12 col-md-5 d-grid">
                    <input type="text" asp-for="Filter" />
                 </div>
                <div class="col-12 col-md-3">
                    <input type="submit" value="Застосувати" class="btn btn-outline-primary w-100 mt-2 mt-md-0" />
                </div>
            </div>
        </form>
       
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Organization) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal@(item.Id)">
                        Delete
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal@(item.Id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Організації видалення</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Буде видалено оганізацію @Html.DisplayFor(modelItem => item.Name)
                                
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                                        <input type="hidden" asp-for="@item.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
@{
    string previosState = Model.Skip == 0 ? "disabled" : "";
}
<nav aria-label="...">
    <ul class="pagination">
        @{
            int pages = Model.CountItems / Model.PageSize + (Model.CountItems % Model.PageSize > 0 ? 1 : 0);
            int curentPage = Model.Skip == 0 ? 1 : Model.CountItems / Model.Skip + Model.CountItems % Model.Skip > 0?1:0;


            if (pages > 1)
            {
                if (curentPage == 1)
                {
                    <li class="page-item active">
                        <span class="page-link">Previous</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="" asp-route-skip="@((curentPage-2)*Model.PageSize)">Previous</a>
                    </li>
                }


                for (int i = 1; i < pages; i++)
                {
                    if (curentPage == i)
                    {
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-page="" asp-route-skip="@((curentPage-1)*Model.PageSize)">@i</a></li>
                    }
                }

                if (curentPage ==pages)
                {
                    <li class="page-item active">
                        <span class="page-link">Next</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="" asp-route-skip="@(curentPage*Model.PageSize)">Next</a>
                    </li>
                }


             }
        }
    </ul>
</nav>
